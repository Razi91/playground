{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "ol": [
        "node_modules/@hanreev/types-ol/ol"
      ],
      "ol/*": [
        "node_modules/@hanreev/types-ol/ol/*"
      ],
      "components": [
        "src/components/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./tests/**/*.ts"
  ]
}
